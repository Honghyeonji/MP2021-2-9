<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddItemFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/selectImageBtn"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:contentDescription="@string/camera"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/camera"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/promotion_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promotion_explain"
                    android:textSize="14dp"
                    />

            </LinearLayout>


            <EditText
                android:id="@+id/booth_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="부스 이름"
                android:privateImeOptions="defaultInputmode=korean" />


            <EditText
                android:id="@+id/booth_location"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="부스 위치"
                android:privateImeOptions="defaultInputmode=korean" />

            <EditText
                android:id="@+id/booth_time"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="부스 시간"
                android:privateImeOptions="defaultInputmode=korean" />

            <EditText
                android:id="@+id/booth"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="top"
                android:padding="5dp"
                android:hint="부스 설명 "
                android:inputType="textMultiLine"
                android:background="@drawable/memo_box"
                android:privateImeOptions="defaultInputmode=korean"
                android:scrollbars = "vertical"/>

            <Button
                android:id="@+id/savebutton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#EABADB"
                android:layout_marginBottom="30dp"
                android:text="저장하기" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>