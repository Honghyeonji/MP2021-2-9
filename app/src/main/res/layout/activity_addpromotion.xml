<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddItemActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/addPromotion_title"
            android:textColor="#BD87BB"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck">

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="508dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/selectImageBtn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:contentDescription="@string/camera"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/camera"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:boxStrokeColor="#BE88BB">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/booth_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="clip_vertical"
                android:hint="@string/booth_name"
                android:shadowColor="#BD87BB"
                tools:ignore="TextContrastCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:boxStrokeColor="#BE88BB">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/booth_location"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/booth_location"
                tools:ignore="TextContrastCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_marginVertical="10dp"
            android:contentDescription="@string/mapImage"
            app:srcCompat="@drawable/location" />

    </LinearLayout>

    <Button
        android:id="@+id/savebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="저장하기"
        android:backgroundTint="#EABADB"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_color"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:paddingVertical="5dp"
        android:theme="?attr/actionBarTheme">

        <ImageButton
            android:id="@+id/promotionBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:background="@null"
            android:contentDescription="@string/promotionBtn"
            android:paddingHorizontal="10dp"
            android:scaleType="fitXY"
            android:screenReaderFocusable="false"
            android:src="@drawable/promotion"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck" />

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/shopBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:background="@null"
            android:contentDescription="@string/shopBtn"
            android:paddingHorizontal="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/shop"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

        <View
            android:id="@+id/view2"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/profileBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:layout_marginHorizontal="40dp"
            android:background="@null"
            android:contentDescription="@string/profileBtn"
            android:paddingHorizontal="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />
    </LinearLayout>

</LinearLayout>