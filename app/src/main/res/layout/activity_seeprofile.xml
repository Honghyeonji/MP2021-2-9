<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddItemActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="개인정보 확인"
            android:textColor="#BD87BB"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck">

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="508dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="clip_vertical"
            android:hint="이름"
            android:shadowColor="#BD87BB"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:hint="학번"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:hint="전화번호"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:hint="@string/PW"
            tools:ignore="TextContrastCheck" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#BE88BB">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newPW"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="5dp"
                android:hint="@string/newPW"
                android:inputType="textPassword"
                tools:ignore="TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#BE88BB">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/checkPW"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="5dp"
                android:hint="@string/checkPW"
                android:inputType="textPassword"
                tools:ignore="TextContrastCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="#EABADB"
            android:text="@string/editBtn"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">

            <ImageButton
                android:id="@+id/selectImageBtn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:contentDescription="@string/camera"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/camera" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editTextTextMultiLine4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start|top"
                    android:text="@string/notice"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/registerAdminBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#EABADB"
                    android:text="@string/registerAdminBtn"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/withdraw" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_color"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:paddingVertical="5dp"
        android:theme="?attr/actionBarTheme">

        <ImageButton
            android:id="@+id/promotionBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:background="@null"
            android:contentDescription="@string/promotionBtn"
            android:paddingHorizontal="10dp"
            android:scaleType="fitXY"
            android:screenReaderFocusable="false"
            android:src="@drawable/promotion"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck" />

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/shopBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:background="@null"
            android:contentDescription="@string/shopBtn"
            android:paddingHorizontal="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/shop"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

        <View
            android:id="@+id/view2"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/profileBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:layout_marginHorizontal="40dp"
            android:background="@null"
            android:contentDescription="@string/profileBtn"
            android:paddingHorizontal="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />
    </LinearLayout>

</LinearLayout>