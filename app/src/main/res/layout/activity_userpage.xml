<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:gravity="center"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/information_check"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#FEDFE5"
        android:text="개인 정보 확인/수정"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="* 아래 메뉴는 인증된 이용자만 사용 가능합니다*"/>

    <Button
        android:id="@+id/goods_posting"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#EBB0D1"
        android:text="상품 게시글 등록"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/promotion_posting"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#EBB0D1"
        android:text=" 부스 홍보 게시글 등록"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/goods_management"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#EBB0D1"
        android:clickable="true"
        android:text="등록 상품 관리"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="@string/developer"
        android:textSize="12dp"
        android:textAlignment="center"
        android:textColor="@color/gray" />

</LinearLayout>